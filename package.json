{
  "name": "wiggles-pages",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run -r dev",
    "lint": "pnpm run -r lint"
  },
  "devDependencies": {
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "pnpm lint",
      "git add"
    ]
  }
}
