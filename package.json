{
  "name": "wiggles",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0",
    "react-scripts": "2.1.8"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "build:css": "postcss src/styles/index.css -o src/tailwind.css",
    "watch:css": "postcss src/styles/index.css -o src/tailwind.css -w",
    "start": "yarn run watch:css & cross-env BROWSER=none react-scripts start",
    "build": "yarn run build:css && react-scripts build",
    "test": "react-scripts test --verbose=false",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "autoprefixer": "^9.5.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "postcss-cli": "^6.1.2",
    "tailwindcss": "^0.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
